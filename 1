        const mainContent = document.getElementById('main-content');
        const navLinks = document.querySelectorAll('.navbar-nav .nav-link, .navbar-brand');

        /**
         * Loads content for the specified page into the main content container.
         * @param {string} pageName - The key name of the page in the pageContent object (e.g., 'accueil').
         */
        function loadPage(pageName) {
            const content = pageContent[pageName] || pageContent['accueil']; // Default to accueil if key is missing
            
            // Clear current content and insert new HTML
            mainContent.innerHTML = content;

            // Update active state in Navbar
            navLinks.forEach(link => {
                link.classList.remove('active-page');
                if (link.dataset.page === pageName) {
                    link.classList.add('active-page');
                }
            });

            // Reinitialize Bootstrap components if needed (like the carousel on the home page)
            if (pageName === 'accueil') {
                const carouselElement = document.getElementById('schoolCarousel');
                if (carouselElement) {
                    new bootstrap.Carousel(carouselElement, {
                        interval: 5000 // Ensure the carousel starts on load
                    });
                }
            }

            // Scroll to top of the page content after loading (excluding initial load)
            if (window.scrollY > 0) {
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        }

        // 2. Attach Event Listeners to Navigation
        navLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const pageName = link.dataset.page;
                if (pageName) {
                    loadPage(pageName);
                    // Close the navbar on mobile after click
                    const navbarCollapse = document.getElementById('navbarNav');
                    const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse);
                    if (bsCollapse) {
                        bsCollapse.hide();
                    }
                }
            });
        });

        // 3. Initial Page Load
        document.addEventListener('DOMContentLoaded', () => {
            // Check if there is a hash in the URL for deeper linking (optional)
            const initialPage = window.location.hash ? window.location.hash.substring(1) : 'accueil';
            loadPage(initialPage);
        });
    </script>
</body>
</html>

